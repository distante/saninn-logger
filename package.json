{
  "name": "@saninn/logger",
  "version": "0.0.5",
  "description": "A configurable wrapper around the console object (without losing the console call position)",
  "main": "dist/@saninn__logger.js",
  "types": "dist/@saninn__logger.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "watch": {
    "transpile-dev": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "delay": 1000,
      "runOnChangeOnly": true
    }
  },
  "scripts": {
    "test": "jest",
    "test:ci": "jest --runInBand --no-cache --watch false --coverage true",
    "test:codecov": "codecov",
    "tsc:check": "tsc --noEmit",
    "prettier:check": "pretty-quick --staged",
    "saninn": "run-p watch live-server",
    "watch": "run-s clean:module && tsc && npm-watch",
    "serve": "live-server --watch=dist/,dev/ --open=dev/index.html --wait=500",
    "transpile-dev": "tsc && npm run fix-es2015-modules",
    "build": "shx rm -rf ./dist/ && tsc --sourceMap false && run-s fix-es2015-modules",
    "build-bundles": "run-p build:*",
    "build:module": "run-s clean:module && tsc --sourceMap false --outDir ./dist-bundles/es6 && node ./scripts/fix-es2015-modules.js ./dist-bundles/es6",
    "build:commonjs": "run-s clean:commonjs && tsc --sourceMap false -m commonjs --outDir ./dist-bundles/commonjs",
    "build:iife": "npm run clean:iife && rollup -c && run-s fix-iife-export",
    "clean:module": "shx rm -rf ./dist-bundles/es6",
    "clean:commonjs": "shx rm -rf ./dist-bundles/commonjs",
    "clean:iife": "shx rm -rf ./dist-bundles/iife",
    "fix-es2015-modules": "node ./scripts/fix-es2015-modules.js",
    "fix-iife-export": "node ./scripts/fix-iife-export.js",
    "bump:beta": "beta",
    "release": "release-it",
    "release:patch": "release-it patch -n",
    "release:minor": "release-it minor -n",
    "release:major": "release-it major -n",
    "release:prepatch": "release-it prepatch -n",
    "release:preminor": "release-it preminor -n",
    "release:premajor": "release-it premajor -n",
    "zip-bundles": "run-s zip:*",
    "zip:module": "cd dist-bundles/es6 && bestzip ../es6.zip * && cd .. && cd ..",
    "zip:commonjs": "cd dist-bundles/commonjs && bestzip ../commonjs.zip * && cd .. && cd ..",
    "zip:iife": "cd dist-bundles/iife && bestzip ../iife.zip * && cd .. && cd .."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/distante/saninn-logger.git"
  },
  "bugs": {
    "url": "https://github.com/distante/saninn-logger/issues"
  },
  "keywords": [
    "console",
    "wrapper",
    "logger"
  ],
  "author": "Saninn Salas Diaz",
  "license": "MIT",
  "homepage": "https://saninnsalas.com",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release-it": {
    "scripts": {
      "beforeStart": "node ./scripts/release_1_before-start.js",
      "afterBump": "node ./scripts/release_3_after-Bump.js ${version}",
      "afterRelease": "echo Successfully released ${name} v${version} to ${repo.repository}."
    },
    "git": {
      "commitMessage": "release: ${version}"
    },
    "github": {
      "release": true,
      "assets": [
        "dist-bundles/*.zip"
      ]
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/jest": "^23.3.12",
    "filehound": "^1.16.5",
    "http-server": "^0.11.1",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "jest-html-reporter": "^2.4.3",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.5.0",
    "prettier": "1.15.3",
    "pretty-quick": "^1.8.0",
    "release-it": "^10.0.2",
    "rollup": "^1.1.0",
    "rollup-plugin-typescript": "^1.0.0",
    "shx": "^0.3.2",
    "ts-jest": "^23.10.5",
    "tslib": "^1.9.3",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2",
    "codecov": "^3.1.0"
  },
  "dependencies": {}
}
